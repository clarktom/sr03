    <property name="hibernate.connection.password">
      admin
    </property>
      <mapping class="beans.Baseidea"/>
      <mapping class="beans.Categorytype"/>
      <mapping class="beans.Idea"/>
      <mapping class="beans.Post"/>
      <mapping class="beans.Product"/>
      <mapping class="beans.Prototype"/>
      <mapping class="beans.Researcher"/>
      <mapping class="beans.Simulation"/>
